<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aadrsh.driverapp.signup2">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingLeft="100dp"
        android:paddingTop="40dp"
        android:text="motorlink"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="Address Line1"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="Account No."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText13"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="Address Line 2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText11"
        app:layout_constraintStart_toStartOf="@+id/editText11"
        app:layout_constraintTop_toBottomOf="@+id/editText11" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="IFSC Code"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editText12"
        app:layout_constraintTop_toBottomOf="@+id/editText12" />

    <EditText
        android:id="@+id/editText15"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="Address Line 3"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText14"
        app:layout_constraintEnd_toEndOf="@+id/editText13"
        app:layout_constraintTop_toBottomOf="@+id/editText13" />

    <EditText
        android:id="@+id/editText16"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="Contact No."
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editText14"
        app:layout_constraintTop_toBottomOf="@+id/editText14" />

    <EditText
        android:id="@+id/editText17"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="Pin Code"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText15"
        app:layout_constraintTop_toBottomOf="@+id/editText15" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText16" />
</android.support.constraint.ConstraintLayout>
